#!/usr/bin/env bash

namespace="default"

while true; do
  if [ "$1" = "-n" ]; then
    shift
    namespace="$1"
  elif [ "$1" = "-l" ]; then
    shift
    pod=$(kubectl get pods -n "$namespace" -l "$1" -o=jsonpath='{.items[0].metadata.name}')
  else
    break
  fi
done

if [ -z $pod ] && [ ! -z $1 ]; then
  pod="$1"
fi
shift

if [ $# -ne 1 ]; then
  echo "Usage: $0 [-n NAMESPACE] (POD_NAME | -l LABEL) PORT"
  exit
fi
port=$1

if [ -z ${TMUX_PANE+x} ]; then
  kubectl port-forward $pod $port
else
  command="sh -c 'kubectl port-forward $pod $port; echo Press enter to exit; read anything'"
  tmux new-window -d -t 90 -n "kubeforward" "$command" 2>/dev/null || tmux split-window -d -t 90 "$command"
fi
