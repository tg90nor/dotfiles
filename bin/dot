#!/usr/bin/env zsh

case $1 in
  setup)
    shift
    cd $DOTDIR/dotfiles
    ./setup.sh $@
    ;;
  update)
    shift
    cd ~/dot/dotfiles
    git pull
    ./setup.sh $@
    ;;
  *)
    if [ -s $DOTDIR/envs/$1 ]; then
      t=$(readlink $DOTDIR/envs/$1)
      n=$(basename $t)
      tmux attach -t "=$n" || tmux new-session -c $t -s $n
    else
      echo "Usage: $0 setup | update"
      exit 127
    fi
    ;;
esac
